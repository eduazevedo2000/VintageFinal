<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vintage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Vintage.styles.css" asp-append-version="true" />
</head>

<body>
    <header class="box-shadow">
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3 justify-content-center">
            <div class="container-fluid mx-auto">
                <a class="navbar-brand" asp-area="" asp-controller="Product" asp-action="Home">Vintage</a>
                <ul class="navbar-nav navbar-nav-centered">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Brand"
                            asp-route-brand="Nike">
                            <img src="~/images/nike.png" alt="Nike" style="height: 30px;">
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Brand"
                            asp-route-brand="Adidas">
                            <img src="~/images/adidas.png" alt="Adidas" style="height: 30px;">
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Brand"
                            asp-route-brand="Puma">
                            <img src="~/images/puma.png" alt="Puma" style="height: 30px;">
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Brand"
                            asp-route-brand="Champion">
                            <img src="~/images/champion.png" alt="Champion" style="height: 50px;">
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Brand"
                            asp-route-brand="TheNorthFace">
                            <img src="~/images/thenorthface.png" alt="The North Face" style="height: 50px;">
                        </a>
                    </li>
                </ul>
                @if (User.Identity.IsAuthenticated)
                {
                    <form asp-controller="Account" asp-action="Logout" method="post" class="form-inline">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Cart" asp-action="Index"><i
                                        class='bx bx-cart'></i></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Order" asp-action="OrderHistory"><i
                                        class='bx bx-spreadsheet'></i></a>
                            </li>
                            <li class="nav-item">
                                <button type="submit" class="nav-link text-dark"
                                    style="background-color: transparent; border: none; cursor: pointer;"><i
                                        class='bx bx-log-out'></i></button>
                            </li>
                        </ul>
                    </form>
                }
                else
                {
                    <form asp-controller="Account" asp-action="Login" method="post" class="form-inline">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="#"><i class='bx bx-search'></i></a>
                            </li>
                            <li class="nav-item">
                                <button type="submit" class="nav-link text-dark"
                                    style="background-color: transparent; border: none; cursor: pointer;"><i
                                        class='bx bx-log-in'></i></button>
                            </li>
                        </ul>
                    </form>
                }

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted box-shadow">
        <div class="container">
            &copy 2024 - Vintage - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
